{
  "GlobalConfiguration": {
  },
  "Routes": [
    // == Authentication Microservice ==
    // authentication-api - authentication-controller
    {
      "DownstreamPathTemplate": "/api/authentication/sign-in",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6001
        }
      ],
      "DownstreamHttpMethod":  [ "POST" ],
      "UpstreamPathTemplate": "/gateway/authentication/sign-in",
      "UpstreamHttpMethod": [ "POST" ],
      "FileCacheOptions": {
        "TtlSeconds": 40
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 10,
        "Limit": 10
      }
    },
    {
      "DownstreamPathTemplate": "/api/authentication/sign-up",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication-api",
          "Port": 6001
        }
      ],
      "UpstreamPathTemplate": "/gateway/authentication/sign-up",
      "UpstreamHttpMethod": [ "POST" ],
      "FileCacheOptions": {
        "TtlSeconds": 40
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 10,
        "Limit": 10
      }
    },
    {
      "DownstreamPathTemplate": "/api/authentication/refresh",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication-api",
          "Port": 6001
        }
      ],
      "UpstreamPathTemplate": "/gateway/authentication/refresh",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": {
        "TtlSeconds": 40
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 10,
        "Limit": 10
      }
    },

    // == Communication Microservice ==
